const publi = [
    {
        title: "Plaza del Agua, an 'Abandoned' Icon of Mar del Plata",
        date: 'May 14, 2018 - El Marplatense',
        images: [
            '/publications/plaza1.avif',
            '/publications/plaza2.avif',
            '/publications/plaza3.avif',
