---
import Anchor from './Anchor.astro';

interface infoProjects {
    id?: string;
    city?: string;
    year?: number;
    room?: string;
    project?: string;
    description?: string;
    img?: string;
    anchor?: string;
    href?: string;
}

const { id, city, year, room, project, description, anchor, href, img } = Astro.props;
---

<section class="py-16 sm:py-20">
    <div class="mx-auto max-w-2xl px-4 sm:px-0 lg:max-w-7xl">
        <div
            class="grid overflow-hidden rounded-xl bg-primary-200/50 shadow-md dark:bg-primary-400 lg:max-h-[700px] lg:grid-cols-2">
            <img
                transition:name={id}
                class="mx-auto h-full w-full object-cover lg:object-bottom lg:aspect-[4/5] max-h-[400px] lg:max-h-[700px]"
                src={img.src}
                alt="picture"
            />
            <div
                class="flex h-full flex-col justify-center gap-4 p-6 dark:bg-primary-950/95 lg:max-h-[700px] lg:p-16">
                <!-- Mission description -->

                <div class="tracking-light font-light text-primary-950/70 dark:text-primary-200/70">
                    <p class="text-xl">
                        {city}
                    </p>
                    <p class="text-base">âœ¦ {room}</p>
                </div>
                <div class="">
                    <dd class="text-4xl font-thin tracking-tight lg:text-6xl">{year}</dd>
                </div>
                <h2 class="text-balance text-3xl font-light tracking-tight lg:text-5xl">
                    {project}
                </h2>

                <div class="flex flex-1 space-y-6">
                    <p class="text-pretty text-base text-primary-950/70 dark:text-primary-200/70">
                        {description}
                    </p>
                </div>
                <div class="flex justify-center">
                    <Anchor name={anchor} href={href} />
                </div>
            </div>
        </div>
    </div>
</section>
