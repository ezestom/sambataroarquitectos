---
import Anchor from './Anchor.astro';

interface infoProjects {
    id?: string;
    city?: string;
    year?: number;
    room?: string;
    project?: string;
    description?: string;
    img?: string;
    anchor?: string;
    href?: string;
}

const { id, city, year, room, project, description, anchor, href, img } = Astro.props;
---

<div class="flex max-w-[350px] flex-col">
    <img
        transition:name={id}
        class="object-cover lg:object-bottom mx-auto h-full max-h-[200px] w-full"
        src={img.src}
        alt="picture"
    />
    <div
        class="flex flex-col overflow-hidden rounded-xl bg-primary-200/50 shadow-md dark:bg-primary-400">
        <div class="flex h-full flex-col justify-center gap-2 p-6 dark:bg-primary-950/95">
            <!-- Mission description -->

            <div class="tracking-light font-light text-primary-950/70 dark:text-primary-200/70">
                <p class="text-base">
                    {city}
                </p>
                <p class="text-base">âœ¦ {room}</p>
            </div>
            <div class="">
                <dd class="text-xl font-thin tracking-tight">{year}</dd>
            </div>
            <h2 class="text-balance text-2xl font-light tracking-tight"></h2>
            {project}

            <p
                class="text-pretty ... truncate text-sm text-primary-950/70 dark:text-primary-200/70">
                {description}
            </p>

            <div class="flex justify-center">
                <Anchor name={anchor} href={href} />
            </div>
        </div>
    </div>
</div>
