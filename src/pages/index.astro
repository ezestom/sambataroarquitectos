---
import Heading from '../components/about/Heading.astro';
import Cta from '../components/home/Cta.astro';
import Hero from '../components/home/Hero.astro';
import Projects from '../components/home/Projects.astro';
import Footer from '../components/layout/Footer.astro';
import Header from '../components/layout/Header.astro';
import Layout from '../layouts/Layout.astro';
import IndexNewsComponent from '../components/IndexNewsComponent.astro';
import IndexPublicationsComponent from '../components/IndexPublicationsComponent.astro';

const texts = [
    {
        page: 'Sambataro Arquitectos es un estudio de arquitectura con más de 20 años de experiencia en el mercado. Nos especializamos en proyectos de viviendas unifamiliares, multifamiliares, comerciales y de oficinas. Nuestro objetivo es crear espacios que se adapten a las necesidades de nuestros clientes y que reflejen su personalidad.',
        title: 'Sambataro Arquitectos',
        description:
            'El castellano es una lengua romance del grupo ibérico. Es uno de los seis idiomas oficiales de la ONU y el segundo idioma más hablado del mundo.',
    },
];
---

<Layout description={texts[0].page} title={texts[0].title}>
    <Header id="top" />
    <Hero title={texts[0].title} description={texts[0].description} />
    <Heading title="Proyectos" subtitle="Selección de los más renombrados" />
    <Projects />
    <Heading
        title="Noticias"
        subtitle="Noticias sobre arquitectura teatral y escenotecnia respecto a proyectos realizados por Sambataro Arquitectos"
    />
    <IndexNewsComponent />
    <Heading
        title="Publicaciones"
        subtitle="Publicaciones sobre arquitectura teatral y escenotecnia respecto a proyectos realizados por Sambataro Arquitectos"
    />
    <IndexPublicationsComponent />
    <!-- <Expertise /> -->
    <!-- <Testimonials /> -->
    <Cta
        title="Construyendo el futuro"
        description="En Sambataro Arquitectos estamos comprometidos con la calidad y la innovación en cada uno de nuestros proyectos."
        anchor="Contactanos"
    />
    <Footer
        description="Sambataro Arquitectos, estudio de arquitectura con más de 40 años de experiencia en asesoría esceno-técnica y maquinaria escénica de mantenimiento'preventivo y correctivo."
    />
</Layout>
