import ProjectPage from '../../../../components/ProjectPage.astro';
import Base from '../../../../layouts/Base.astro';
import Layout from '../../../../layouts/Layout.astro';

import luthiers1 from '../../../../img/projects/luthiers/luthiers1.webp';
import luthiers2 from '../../../../img/projects/luthiers/luthiers2.webp';

const datosTecnicos = [
    { label: 'Typology', value: 'Outdoor Stages and Productions' },
    {
        label: 'Location',
        value: 'Güemes Monument Grounds, Autonomous City of Buenos Aires, Argentina',
    },
    { label: 'General Production', value: 'Lino Patalano' },
    { label: 'Artists', value: 'Les Luthiers' },
    { label: 'Services', value: 'Executive Project and Technical Production Direction' },
    { label: 'Client', value: 'Lino Patalano' },
    {
        label: 'Scenotechnical Project',
        value: 'Tina Di Sarcina, Sandro Massironi, Arch. Alfio Sambataro',
    },
    { label: 'Year', value: '2007' },
];

const asesores = ['-'];

const images = [
    {
        largeURL: luthiers1.src,
        thumbnailURL: luthiers1.src,
        width: 1605,
        height: 744,
    },
    {
        largeURL: luthiers2.src,
        thumbnailURL: luthiers2.src,
        width: 992,
        height: 744,
    },
];
---

<Layout description="" title="Les Luthiers 40 years">
    <Base>
        <ProjectPage
            images={images}
            id="luthiers"
            city="Buenos Aires, Argentina"
            year="2007"
            room="Aniversario nr 40, Parque Monumento a Güemes"
            project="Les Luthiers 40 years"
            description1="On the occasion of its 40 years of artistic career, the group of informal instruments Les Luthiers made a show in front of more than 60,000 people in the park of the Monument to Güemes, in a public and free show."
            description2="In the open air production project, the design and technical direction of the production were carried out, in the staging constructive systems, as in lighting, sound and video systems."
            img={luthiers}
            datosTecnicos={datosTecnicos}
            asesores={asesores}
        />
    </Base>
</Layout>
