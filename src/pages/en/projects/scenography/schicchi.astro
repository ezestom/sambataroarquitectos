---
import schicchi from '../../../../img/projects/schicchi.webp';
import ProjectPage from '../../../../components/ProjectPage.astro';
import Base from '../../../../layouts/Base.astro';
import Layout from '../../../../layouts/Layout.astro';

import schicchi1 from '../../../../img/projects/schicchi/schicchi1.webp';
import schicchi2 from '../../../../img/projects/schicchi/schicchi2.webp';

const datosTecnicos = [
    { label: 'Typology', value: 'Scenography' },
    { label: 'Location', value: 'Teatro Colón Buenos Aires, Argentina' },
    { label: 'Services', value: 'Engineering and scenic construction systems' },
    { label: 'Stage Director', value: 'Willy Landin' },
    { label: 'Scenographic Design', value: 'Enrique Bordolini' },
    { label: 'Lighting Design', value: 'Enrique Bordolini' },
    { label: 'Costumes', value: 'Imme Möller' },
    { label: 'Technical Design', value: 'Arq. Alfio Sambataro' },
    { label: 'Digital Architectural Visualization', value: 'Alfredo Santis' },
    { label: 'Year', value: '2003' },
];

const asesores = ['-'];

const images = [
    {
        largeURL: schicchi1.src,
        thumbnailURL: schicchi1.src,
        width: 992,
        height: 744,
    },
    {
        largeURL: schicchi2.src,
        thumbnailURL: schicchi2.src,
        width: 992,
        height: 744,
    },
];
---

<Layout description="" title="Gianni Schicchi">
    <Base>
        <ProjectPage
            images={images}
            id="schicchi"
            city="Santiago, Chile"
            year="2002"
            room="Municipal Theater of Santiago"
            project="Gianni Schicchi"
            description1="Comic opera in an act with music by Giacomo Puccini and libretto in Italian by Giovacchino Forzano, composed in 1917-18 and premiered at the Opera House of the Metropolitan Opera House in New York on December 14, 1918."
            description2="The scenographic production project for the Municipal Theater of Santiago included the design of engineering and set design systems, stagecraft machinery, modular systems for units of compact transport, and special effects mechanisms."
            img={schicchi}
            datosTecnicos={datosTecnicos}
            asesores={asesores}
        />
    </Base>
</Layout>
