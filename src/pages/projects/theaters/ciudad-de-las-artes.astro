import ciudad3 from '../../../img/projects/ciudad/ciudad3.webp';
import ciudad4 from '../../../img/projects/ciudad/ciudad4.webp';
import ciudad5 from '../../../img/projects/ciudad/ciudad5.webp';

const images = [
    {
        largeURL: ciudad1.src,
        thumbnailURL: ciudad1.src,
        width: 950,
        height: 633,
    },
    {
        largeURL: ciudad2.src,
        thumbnailURL: ciudad2.src,
        width: 1323,
        height: 744,
