<Layout description="" title="Gracias 2007">
    <Base>
        <ProjectPage
            images={images}
            id="gracias"
            city="Buenos Aires, Argentina"
            year="2007"
            room="Despedida de Julio Bocca, Av. 9 de Julio"
            project="Gracias 2007"
            description1="Con motivo de su despedida como bailarín profesional, el renombrado Julio Bocca bailó frente a más de 300.000 personas al pie del obelisco porteño, en un espectáculo público y gratuito acompañado de otros artistas invitados."
            description2="En el proyecto de la producción al aire libre se realizaron el diseño y la dirección técnica de la producción, tanto de los sistemas constructivos escénicos como de los sistemas de iluminación, sonido y video."
            img={gracias}
            datosTecnicos={datosTecnicos}
            asesores={asesores}
        />
    </Base>
